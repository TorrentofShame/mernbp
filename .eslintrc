{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true,
  	"jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
	  "plugin:jsx-a11y/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
	  "es6": true
    },
    "ecmaVersion": 12
  },
  "plugins": [
    "react",
  	"babel"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
  	"eqeqeq": [
  	  "error",
  	  "smart"
  	],
  	"multiline-comment-style": [
  	  "error",
  	  "bare-block"
  	]
  }
}
